-- write a qurey to retrieve the top n records
	
select * from employeeinfo limit 5
-- write a qurey to obtain relevant records from the employeeinfo table ordered by department in 
-- ascending order and emplname in descending order
select * from employeeinfo order by department asc , emplname desc
-- create a query to fetch details of employees having "delhi" as their address
select * from employeeinfo where address = 'delhi'
	-- write a query to get the details of employees whose empfname end with 'a'
select empfname from employeeinfo where empfname ilike '%a'
